<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2.5dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/design_default_color_secondary_variant"
        app:strokeWidth="1.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombre cliente"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMENTARIO" />

            <TextView
                android:id="@+id/tvServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servicios" />

            <TextView
                android:id="@+id/tvPuntuacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="estrellas: ★☆☆☆☆"
                android:textColor="@color/md_theme_star_rating" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>